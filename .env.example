# Crucible Configuration Template
# Copy this file to .env and customize as needed

# Default MySQL settings
MYSQL_ROOT_PASSWORD=your_secure_password_here
MYSQL_USER=laravel
MYSQL_PASSWORD=laravel_password_here

# Default domain for new sites
DEFAULT_DOMAIN=localhost

# Backup settings
BACKUP_HOST=user@backup-server.com
BACKUP_PATH=~/backups/mysql/

# PHP settings
PHP_VERSION=8.4
PHP_FPM_SOCKET=/run/php/php8.4-fpm.sock

# Caddy settings
CADDY_CONFIG_PATH=/etc/caddy
CADDY_SITES_PATH=/etc/caddy/sites

# Laravel settings
LARAVEL_ROOT=/var/www
LARAVEL_USER=www-data
LARAVEL_GROUP=www-data